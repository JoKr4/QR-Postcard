@goht UserContent(salutation string, pc *postcard) {
%div{class: "container", style: "max-width: 540px;"}
  %div{class: "row"}
    %img{src: "/static/some.jpg", class: "img-fluid rounded-start", alt: "..."}
  %div{class: "row mt-3"}
    %h4 #{salutation}
  %div{class: "row"}
    %textarea{class: "form-control", rows: "4", name: "usertext", id:"textarea1"}
      =%s pc.Textmessage
  %div{class: "row mt-2"}
    = @render SendtextButton(pc.HasContent())
}