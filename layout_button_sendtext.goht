@goht SendtextButton(ok, camera bool) {
- conditionalClasses := map[string]bool{"btn btn-success": ok == true, "btn btn-primary": ok == false}
- onclick := ""
- if camera
	- onclick = "uploadCachedPhoto()"
%button{
	id: "sendtext",
	style: "height: 60px;",
	hx-post: "/api/postcard/update",
	hx-swap: "outerHTML",
	hx-include: "#textarea1",
	class: #{conditionalClasses},
	onClick: #{onclick}
} Speichern und Hochladen
}
