@goht SendtextButton(ok, camera bool) {
- classes := map[string]bool{"btn btn-success": ok, "btn btn-primary": ok}
- extra := map[string]string{}
- if camera
	- extra = map[string]string{"onClick": "uploadCachedPhoto()"}
%button{
	id: "sendtext",
	style: "height: 60px;",
	hx-post: "/api/postcard/update",
	hx-swap: "outerHTML",
	hx-include: "#textarea1",
	class: #{classes},
	@attributes: #{extra}
} Speichern und Hochladen
}